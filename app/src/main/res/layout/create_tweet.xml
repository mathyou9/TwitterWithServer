<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC101010"
    android:id="@+id/exitRelativeLayout"
    android:clickable="true"
    android:focusable="true"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/linearCreateTweet"
        android:layout_width="334dp"
        android:layout_height="469dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="118dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="144dp"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/createTweetImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/createTweetName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name" />

                <TextView
                    android:id="@+id/createTweetAlias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="alias" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's on your mind?" />

        <EditText
            android:id="@+id/createTweetMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="message" />

        <TextView
            android:id="@+id/createTweetChars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="0/200" />

        <Button
            android:id="@+id/createTweetShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share" />
    </LinearLayout>

</RelativeLayout>